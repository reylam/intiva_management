generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password      String
  photo_profile String?
  role          Role      @default(MEMBER)
  division_id   String?
  division      Division? @relation(fields: [division_id], references: [id], map: "fk_division_id")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

model Division {
  id        String   @id @default(uuid())
  name      String
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("divisions")
}

model Content {
  id              String      @id @default(uuid())
  title           String
  description     String
  imagePath       String
  createdAt       DateTime    @default(now())
  tag_id          String?
  sub_category_id String
  tag             Tag?        @relation(fields: [tag_id], references: [id], map: "fk_tag_id")
  subcategory     SubCategory @relation(fields: [sub_category_id], references: [id], map: "fk_subcategory_id")
  updatedAt       DateTime    @updatedAt

  @@map("contents")
}

model Category {
  id          String        @id @default(uuid())
  name        String
  subCategory SubCategory[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@map("categories")
}

model SubCategory {
  id          String    @id @default(uuid())
  name        String
  category_id String
  category    Category  @relation(fields: [category_id], references: [id], map: "fk_category_id")
  contents    Content[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("sub_categories")
}

model Tag {
  id        String    @id @default(uuid())
  name      String
  content   Content[] @relation(map: "fk_content_tag")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("tags")
}

enum Role {
  MEMBER
  ADMIN
  SUPER_ADMIN
}
